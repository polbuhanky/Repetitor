<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.tutor.TutorMain.TutorMainFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/place_holder"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        android:layout_marginBottom="70dp"
        app:navGraph="@navigation/tutor_bnv_graph"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/mainBNV"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@drawable/common_gradient"
        app:itemIconTint="@drawable/bottom_navigation_item_background_colors"
        app:itemTextColor="@color/white"
        app:menu="@menu/tutor_menu_bottom_navigation" />

</FrameLayout>